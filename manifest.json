{
  "name": "eMayl",
  "description": "Use eMayl service on Chrome.",
  "manifest_version": 3,
  "version": "1.0",
  "default_locale": "en",
  "background": { "service_worker": "background.bundle.js" },
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon-32.png"
  },
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*", "<all_urls>"],
      "js": ["contentScript.bundle.js"],
      "css": ["contentScript.css"]
    }
  ],
  "options_page": "options.html",
  "declarative_net_request": {
    "rule_resources": [
      {
        "id": "icloud_com_simulation_headers",
        "enabled": true,
        "path": "rules.json"
      }
    ]
  },
  "permissions": [
    "declarativeNetRequest",
    "storage",
    "tabs",
    "contextMenus",
    "webRequest",
    "notifications"
  ],
  "host_permissions": [
    "https://*.icloud.com/*",
    "https://*.emayl.app/*"
  ],
  "icons": {
    "16": "icon-16.png",
    "32": "icon-32.png",
    "48": "icon-48.png",
    "128": "icon-128.png"
  }
}
